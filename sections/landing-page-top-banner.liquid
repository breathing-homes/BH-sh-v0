{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .theme-btn-1 {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
  }
  #section-{{ section.id }} .btn-effect-1:hover {
    color: {{ section.settings.button_text_hover_color }};
  }
  #section-{{ section.id }} .theme-btn-1:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
  }
</style>
{%- endif -%}

{%- render 'section-style' -%}

<style>
  html, body {
    max-width: 100%;
    overflow-x: hidden;
}

  #section-{{ section.id }} {
    background: #2D674B;
    color: #F8EDE3;
    width:100vw;
    text-align: center;
  }
  #section-{{ section.id }} .landing-banner-info-wrap{
    padding:20px;
    margin-top: 0;
  }
  .landing-banner-info-wrap h1{
    font-size: 40px;
    margin-bottom: 30px;
  }
  
  .landing-banner-info-wrap h1, .landing-banner-info-wrap h3, .landing-banner-benefits .lb-benefits-container h5{
    color: #F8EDE3;
  }
  .landing-banner-info-wrap h3{
    font-size: 15px;
  }
  .landing-banner-benefits .lb-benefits-container h5 {
    font-size: 17px;
    
  }
  @media only screen and (min-width: 320px)  {
    
    .landing-banner-benefits .lb-benefits-container h5 {
      font-size: 11px;
      
    }
  }
  @media only screen and (min-width: 355px)  {
    
    .landing-banner-benefits .lb-benefits-container h5 {
      font-size: 13px;
      
    }
  }
  @media only screen and (min-width: 380px)  {
    
    .landing-banner-benefits .lb-benefits-container h5 {
      font-size: 15px;
      
    }
  }
  
  .landing-banner-benefits{
    display: flex;
    align-items: center;

  }
  .lb-benefits-container{
    margin: 0 auto;
    display: flex;
  }
  #section-{{ section.id }} .lb-cta-btn-wrapper {
    margin-top: 12px;
  }
  .lb-cta-btn-wrapper .btn {
    background: #7B9EA8;
    color: #F8EDE3;
    margin-top: 0;
    border-radius: 7px;
  }
  .lb-cta-btn-text {
    font-size: 18px;
    margin-right: 2px;
  }
  .lb-bh-assured-img{
    margin-top: 40px;
  }
</style>

