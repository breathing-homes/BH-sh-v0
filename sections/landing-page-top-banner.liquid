{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .theme-btn-1 {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
  }
  #section-{{ section.id }} .btn-effect-1:hover {
    color: {{ section.settings.button_text_hover_color }};
  }
  #section-{{ section.id }} .theme-btn-1:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
  }
</style>
{%- endif -%}

{%- render 'section-style' -%}

<style>
  #section-{{ section.id }} {
    background-color: blue;
    
  }
  .landing-banner-info-wrap{
    padding:20px;
  }
  .landing-banner-img-wrap {
    
  }
</style>

<div {% if settings.animation_enable %}data-aos="fade-up"{% endif %} class="ltn__about-us-area" id="section-{{ section.id }}" data-section="Landing_top_banner">
    <div class="row {% if section.settings.row_reverse %}flex-row-reverse{% endif %}">
      <div class="col-lg-6 align-self-center about-img-right">
        <div class="about-us-info-wrap landing-banner-info-wrap">
          {%- if section.settings.title != '' -%}
          <h1>{{ section.settings.title }}</h1>
          {%- endif -%}
          <div class="landing-banner-benefits" style="display: flex;">
            <h5 style="margin-right: 20px;">
              <svg xmlns="http://www.w3.org/2000/svg" height="1em" fill="#FFA500" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"/></svg>
              Benefit 1
            </h5>
            <h5 style="margin-right: 20px;">
              <svg xmlns="http://www.w3.org/2000/svg" height="1em" fill="#FFA500"  viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"/></svg>
              Benefit 2
            </h5>
            <h5>
              <svg xmlns="http://www.w3.org/2000/svg" height="1em" fill="#FFA500"  viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"/></svg>
              Benefit 3
            </h5>
          </div>
          {%- if section.settings.sub_title != '' -%}
          <h3>{{ section.settings.sub_title }}</h3>
          {%- endif -%}
          {%- if section.settings.main_content != '' -%}
          {{ section.settings.main_content }}
          {%- endif -%}
          <div style="display: flex;">
            <span class="star-ratings-css" style="unicode-bidi: bidi-override; color: gold; font-size: 25px; height: 25px; width: 100px; text-shadow: 0px 1px 0 #a2a2a2; margin-right: 50px;">
              <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
            </span>
            <span class="BH_ASSURED_LOGO">
              <img src="https://cdn.shopify.com/s/files/1/0806/7632/3637/files/BH_assured_logo.png" alt="BH_ASSURED" width="100"  />
            </span>
          </div>
          {%- if section.settings.show_button -%}
          <div class="btn-wrapper" style="margin-top: 10px;">
            <a href="{{ section.settings.button_url }}" class="btn theme-btn-1 btn-effect-1"  style="width: 250px">{{ section.settings.button_title }}</a>
          </div>
          {%- endif -%}
          <div style="margin-top: 20px;">
            <h5 style="margin-bottom: 0; color: #939C9C">Secured Payments</h5>
            <div>
                <img src="https://cdn.shopify.com/s/files/1/0806/7632/3637/files/upi-ar21.png?v=1691608710" alt="UPI" width="60" height="30" style="margin-right: 10px;" />
                <img src="https://cdn.shopify.com/s/files/1/0806/7632/3637/files/GPAY.png?v=1692097072" alt="Gpay" width="60"  height="30" style="margin-right: 10px;" />
                <img src="https://cdn.shopify.com/s/files/1/0806/7632/3637/files/paytm.png" alt="Paytm" width="60" height="30" />
                <img src="https://cdn.shopify.com/s/files/1/0806/7632/3637/files/phonepe.webp?v=1691608710" alt="Phonepe" width="80" />
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 align-self-center">        
        <div class="about-us-img-wrap landing-banner-img-wrap">
          {%- if section.settings.about_image -%}
          {%- assign image = section.settings.about_image -%}
          <span class="image-position-wrapper" style="padding-bottom: {{ 1 | divided_by: image.aspect_ratio | times: 100 }}%;">
            <img srcset="{% if image.width >= 270 %}{{ image | img_url: '270x' }} 270w,{% endif %}
                         {% if image.width >= 300 %}{{ image | img_url: '300x' }} 300w,{% endif %}
                         {% if image.width >= 328 %}{{ image | img_url: '328x' }} 328w,{% endif %}
                         {% if image.width >= 370 %}{{ image | img_url: '370x' }} 370w,{% endif %}
                         {% if image.width >= 420 %}{{ image | img_url: '420x' }} 420w,{% endif %}
                         {% if image.width >= 540 %}{{ image | img_url: '540x' }} 540w,{% endif %}
                         {% if image.width >= 570 %}{{ image | img_url: '570x' }} 570w,{% endif %}
                         {% if image.width >= 670 %}{{ image | img_url: '670x' }} 670w,{% endif %}
                         {% if image.width >= 770 %}{{ image | img_url: '770x' }} 1100w,{% endif %}
                         {% if image.width >= 900 %}{{ image | img_url: '900x' }} 900w,{% endif %}
                         {% if image.width >= 970 %}{{ image | img_url: '970x' }} 970w,{% endif %}
                         {% if image.width >= 1100 %}{{ image | img_url: '1100x' }} 1100w,{% endif %}
                         {% if image.width >= 1200 %}{{ image | img_url: '1200x' }} 1200w{% endif %}"
                 loading="lazy"
                 src="{{ image | img_url: '570x' }}"
                 sizes="100vw"
                 width="{{ image.width }}"
                 height="{{ image.height }}"
                 alt="{{ image.alt | escape }}"
                 class="image-position-size"
                 >
          </span>
          {%- else -%}
          <img src="https://via.placeholder.com/540x540" alt="Banner">
          {%- endif -%}
        </div>        
      </div>
    </div>
</div>

