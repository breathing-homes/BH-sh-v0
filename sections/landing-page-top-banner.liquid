          {%- if section.settings.sub_title != '' -%}
          <h3>{{ section.settings.sub_title }}</h3>
          {%- endif -%}
          {%- if section.settings.main_content != '' -%}
          {{ section.settings.main_content }}
          {%- endif -%}
          <div style="display: flex; align-items: center;">
            <div style="display: flex; margin: 0 auto;">
              <span class="star-ratings-css" style="unicode-bidi: bidi-override; color: gold; font-size: 16px; height: 17px; width: 80px; text-shadow: 0px 1px 0 #a2a2a2; margin-right: 20px;">
                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
              </span>
              <span style=" transform: translateY(2px);">
